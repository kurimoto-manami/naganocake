<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table>
        <tbody>
          <tr>
            <td><h2>ショッピングカート</h2></td>
            <td></td>
            <td></td>
            <td></td>
            <td><%= link_to "カートを空にする", destroy_all_path, class: "btn btn-sm btn-danger destroy_all_cart_item", method: :delete %></td>
          </tr>
        </tbody>
      </table>

      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item_image(50,50) %>
              <%= cart_item.name %>
            </td>
            <td><%= cart_item.price %></td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td></td>
            <td><%= link_to "削除する", cart_items_path(@cart_item.id), class: "btn btn-sm btn-danger destroy_book", method: :delete %></td>
          </tr>
          <% end %>
          <%= link_to "買い物を続ける", items_path, class: "btn-btn-sm btn-success" %>
          <tr>
            <td>合計金額</td>
            <td><%= (cart.item.price*cart.quantity).to_s(:delimited) %></td>
          </tr>
          <tr>
            <td><%= link_to "情報入力に進む", new_order_path, class: "btn-btn-sm btn-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

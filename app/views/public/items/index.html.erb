<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <table class="table">
        <thead>
          <tr>
            <td><strong>ジャンル検索</strong></td>
          </tr>
        </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td>
                <%= link_to admin_genres_path do %>
                  <%= genre.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
    <div class="col-md-10">
      <h2>商品一覧</h2>
      <div class="list-wrap">
        <% @items.each do |item| %>
          <% if item.image.attached? %>
            <%= image_tag item.image, :size =>'100x100' %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
          <div class="list-item">
            <%= link_to item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </div>
          <div>
            ￥<%= item.price.to_s(:delimited) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <table class="table">
        <thead>
          <tr>
            <td><strong>ジャンル検索</strong></td>
          </tr>
        </thead>
          <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td>
                <%= link_to admin_genres_path do %>
                  <%= genre.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container container-m">
  <div class="row">
  <div class="col-lg-10">
    <h2>商品一覧</h2>
    <div class="card-deck">
      <% @items.each do |item| %>
      <div class="d-flex flex-wrap justify-content-center">
        <div class="card border-0">
          <div class="card-body">
            <h5 class="card-title"><%= image_tag item.get_image(100,100) %></h5>
            <p class="card-text">
              <%= link_to item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </p>
            <p class="card-text">￥<%= item.price.to_s(:delimited) %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
<div class="container container-m">
  <div class="row">
    <div class="col-lg-10">
      <div class="d-flex flex-wrap">
        <div>
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= image_tag item.item_image(100,100) %>
            </td>
          </tr>
          <tr>
            <td>
              <%= link_to item_path(@item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <%= item.price %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>注文情報確認</h2>
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @cart_items.each do |cart_item| %>
          <% @total = @total + cart_item.subtotal %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(50,50) %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.price.to_s(:dalimited) %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td>送料</td>
            <% @order.sipping_cost = 800 %>
            <td><%= @order.sipping_cost %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <% @order.total_payment = @total + @order.sipping_cost %>
            <td><%= @total + @order.sipping_cost %></td>
          </tr>
        </tbody>
      </table>
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <p>支払い方法</p>
          <%= @order.payment_method %>
        <p>お届け先</p>
          〒<%= @order.postal_code %><%= @order.address %><%= @order.name %>
        <%= f.submit "注文を確定する" %>
      <% end %>
    </div>
  </div>
</div>
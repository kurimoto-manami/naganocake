<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>個人情報編集</h2>

      <%#= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%#= render "public/shared/error_messages", resource: resource %>
      <%= form_with model: @customer do |f| %>
        <div class="field">
          <td><%= f.label :氏名 %></td>
          <td><%= f.text_field :last_name, autocomplete: "last_name" %></td>
          <td><%= f.text_field :first_name, autocomplete: "first_name" %></td>
        </div>

        <div class="field">
          <td><%= f.label :フリガナ %></td>
          <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
          <td><%= f.text_field:first_name_kana, autocomplete: "first_name_kana" %></td>
        </div>

        <div class="field">
          <td><%= f.label :郵便番号 %></td>
          <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
        </div>

        <div class="field">
          <td><%= f.label :住所 %></td>
          <td><%= f.text_field :address, autocomplete: "address" %></td>
        </div>

        <div class="field">
          <td><%= f.label :電話番号 %></td>
          <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
        </div>

        <div class="field">
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>

        <div class="actions">
          <td><%= f.submit "編集内容を保存", class: 'btn-sm btn-primary' %></td>
          <td><%= f.submit "退会", class: 'btn-sm btn-primary' %></td>
        </div>
      <% end %>
    </div>
  </div>
</div>
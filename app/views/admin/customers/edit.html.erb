<div class="container">
  <div class="row">
    <div class="col-md-10 ">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
        <%= form_with(model: @customer, local: true) do |f| %>
          <p>会員ステータス</p>
            <%= f.radio_button :is_deleted, Customer.is_deleteds.key(0) %>
            <%= f.label :is_deleted_valid, Customer.is_deleteds_i18n[:valid] %>
            <%= f.radio_button :is_deleted, Customer.is_deleteds.key(1) %>
            <%= f.label :is_deleted_secession, Customer.is_deleteds_i18n[:secession]%>
        <% end %>
      <div class="form-group">
        <%= f.submit "更新を保存", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
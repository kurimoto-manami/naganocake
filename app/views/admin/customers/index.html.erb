<div class="container">
  <div class="row">
    <div class="col-md-10 ">
      <h2>会員一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>顧客名</th>
            <th></th>
            <th>フリガナ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @customers.each do |customer| %>
            <td>
              <%= @customer.last_name %>
            </td>
            <td>
              <%= @customer.first_name %>
            </td>
            <td>
              <%= @customer.last_name_kana %>
            </td>
            <td>
              <%= @customer.first_name_kana %>
            </td>
            <td>
              <%= link_to "詳細", customer_path(customer.id) %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12 ">
      <h2>会員一覧</h2>

      <table class="table table-noborder">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          <% end %>
          <%= paginate @customers %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
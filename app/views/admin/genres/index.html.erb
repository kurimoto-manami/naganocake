<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>ジャンル追加</h2>
      <%= form_with model: @genre do |f| %>
      <div>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class: "form-control grnre name" %>
        <%= f.submit "追加", class: "btn btn-success" %>
      </div>
      
    <div class="col-md-8 offset-md-1">
      <h2>ジャンル一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to '編集', edit_genre_path(genre), class: 'btn-sm btn-primary' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
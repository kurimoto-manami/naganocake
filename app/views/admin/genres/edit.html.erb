<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ジャンル編集</h2>
      <div class="col-md-4 ">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
      <table class="table">
        <tbody>
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name, class: "form-control name"%></td>
            <td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10 ">
      <h2>注文履歴</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員名</th>
            <th>注文日時</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @orders.each do |order| %>
            <td>
              <%= @customer.name %>
            </td>
            <td>
              <%= order.created_at %>
            </td>
            <td>
              <%= link_to "注文詳細" order_path(order.id) %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>注文履歴一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @orders.each do |order| %>
            <td>
              <%= link_to order_path(order.id) do %>
                <%= order.updated_at %>
              <% end %>
            </td>
            <td><%= order.customer.name %> </td>
            <td><%= order.amount %></td>
            <td><%= order.status %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
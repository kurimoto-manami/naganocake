<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>商品一覧</h2>
        <div class="box">
          <%= link_to new_admin_item_path, class: "btn btn-outline-secondary btn-block" do %>
            <i class="fa-duotone fa-plus"></i>
          <% end %>
        </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @items.each do |item| %>
            <td><%= item.id %></td>
            <td>
              <%= link_to item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <td><%= item.is_active %></td>
          <% end %>
          <%= paginate @items %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
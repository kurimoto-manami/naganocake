<div class="container">
  <div class="row">
    <div class="col-md-10 ">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>写真</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @items.each do |item| %>
            <td>
              <%= @genre.name %>
            </td>
            <td>
              <%= image_tag item.get_item_image(100,100) %>
            </td>
            <td>
              <%= link_to item_path(@item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.price %>
            </td>
          <% end %>
          </tr>
          <tr>
            <td>
              <% if @item.admin == current_admin %>
                <%= link_to "新規投稿", new_item_path, class: "btn-btn-sm btn-success" %>
                <%= link_to "ジャンル詳細", @genre_path(@genre.id), class: "btn-btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
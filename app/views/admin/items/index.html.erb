<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td><h2>商品一覧</h2></td>
            <td>
              <div class="box">
                <%= link_to new_admin_item_path, class: "btn btn-outline-secondary" do %>
                  <i class="fa-duotone fa-plus"></i>
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
      <table class="table table-noborder">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
          <% end %>
          <tr>
            <td>
              <div class="d-flex flex-center">
                <%= paginate @items %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
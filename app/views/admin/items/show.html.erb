<div>
  <%= flash[:notice] %>
</div>
<h2 "p-3 mb-2 bg-primary">商品詳細</h2>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td><%= image_tag @item.get_image(200,200) %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @genres.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜き価格)</td>
            <td><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
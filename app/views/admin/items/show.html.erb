<div class="container">
  <div class="row">
    <div class="col-md-10 ">
      <h2>商品詳細</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @item.get_image(100,100) %></td>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre_id %></td>
          </tr>
          <tr>
            <td>税込価格(税抜き価格)</td>
            <td><%= %><%= @item.price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if item.is_active == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to "編集する", edit_admin_item_path(@item.id) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <% if @item.errors.any? %>
        <h3><%= @item.errors.count %>件の未入力項目があります。</h3>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <h2>商品新規登録</h2>
      <table class="table">
        <tbody>
          <%= form_with model: @item, url: admin_items_path do |f| %>
          <tr>
            <td><%= f.label :item_image, "商品画像" %></td>
            <td><%= f.file_field :item_image, class: "form-control-file", accept: "image/*" %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "商品名" %></td>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :introduction, "商品説明" %></td>
            <td><%= f.text_area :introduction, class: "form-control" %></td>
          <tr>
          </tr>
            <td><%= f.label :genre_id, "ジャンル" %></td>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
          </tr>
          <tr>
            <td><%= f.label :price, "税抜価格" %></td>
            <td><%= f.text_field :price, class: "form-control" %>円</td>
          </tr>
          <tr>
            <td><%= f.label :is_active, "販売ステータス" %></td>
            <td>
              <%= f.radio_button :is_active, false %>販売中
              <%= f.radio_button :is_active, true %>販売停止中
            </td>
          </tr>
          <tr>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>